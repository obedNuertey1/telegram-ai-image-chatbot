{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "removeComments": true,
        "sourceMap": false,
        "baseUrl": "src",
        "noUnusedParameters": true,
        
        "outDir": "./dist",
        // "rootDir": "./src", // uncomment during production
        "rootDir": "./", // Comment out during production
        "resolveJsonModule": true,

        "skipLibCheck": true,
        "allowJs": true,
        "strict": false,
    },
    "include":["src/**/*", "tests/**/*"],
    "exclude":["node_modules", "dist/*", "src/static"],
    "lib": ["es6"]
}

